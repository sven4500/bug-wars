<Window x:Class="BugWars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BugWars"
        Title="Войны жуков" Height="300" Width="400">

    <!-- Используем свойство Stretch чтобы растянуть Canvas на полный размер окна. -->
    <Viewbox Stretch="Fill">
        <!-- Не понимаю какую роль здесь играет элемент ItemsControl, но вот пример:
        https://stackoverflow.com/questions/2317713/binding-wpf-canvas-children-to-an-observablecollection -->
        <ItemsControl>
            <ItemsControl.Resources>
                <!-- Здесь реализована передача аргументов в преобразователь данных тем самым
                можно удобно настраивать внешний вид прямиком из XAML редактора. -->
                <local:GameObjectConverter x:Key="GameObjectConverterObject" GridOpacity="0.1"/>
            </ItemsControl.Resources>
            
            <ItemsControl.ItemsSource>
                <Binding Path="GameObjects" Mode="OneWay" Converter="{StaticResource GameObjectConverterObject}"/>
            </ItemsControl.ItemsSource>
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Viewbox>
    
</Window>
